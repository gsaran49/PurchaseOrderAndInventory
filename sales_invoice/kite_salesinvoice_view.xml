	<record id="kite_salesinvoice_form_view_1" model="ir.ui.view">
			<field name="name">kite.salesinvoice.form</field>
			<field name="model">kite.salesinvoice</field>
			<field name="arch" type="xml">
				<form string="kite salesinvoice" version="7.0">	
					<header>
					<button name="confirm_purchase" string="Confirm" states="draft" type="object" class="oe_highlight"/>
					</header>
					<group>			
						<group>			
							<field name="Bill_No"/>
							<field name="Date"></field>	
							<field name="Phone_No"/>
							<field name="state"/>
							
						</group>	
							   
						<group>
							<field name="Amount"/>
							<field name="Tax"/>
						</group>
					</group>
					
					<field name = "line_id"/>
				</form>
			</field> 
		</record>
		
		<record id="kite_salesinvoice_tree_view_1" model="ir.ui.view">
			<field name="name">kite.salesinvoice.tree</field>
