			<field name="arch" type="xml">
				<tree toolbar="True" string="Purchase">
					<field name="Bill_No"/>
					<field name="Date"/>
<!--					
    				<field name="status"/>
-->    				
				</tree>
			</field>
		</record>
		

	
		
