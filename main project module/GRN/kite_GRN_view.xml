<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	
	<record id="kite_GRN_form_view" model="ir.ui.view">
			<field name="name">kite.GRN.form</field>
			<field name="model">kite.GRN</field>
			<field name="arch" type="xml">
				<form string="kite GRN" version="1.0">	
					<header>
					<button name="confirm_module" string="Confirm" states="draft" type="object" class="oe_highlight"/>
					</header>
					<group>			
						<group>			
							<field name="supplier"/>
							<field name="grn_no"/>
							<field name="state"/>	
						</group>	
							   
						<group>
							<field name="creation_date"/>
							<field name="active"/>
						</group>
					</group>
					
					<field name = "line_id"/>
				</form>
			</field> 
		</record>
		
		<record id="kite_GRN_tree_view" model="ir.ui.view">
			<field name="name">kite.GRN.tree</field>
			<field name="model">kite.GRN</field>
			<field name="arch" type="xml">
				<tree toolbar="True" string="module">
					<field name="supplier"/>
					<field name="creation_date"/>
					<field name="grn_no"/>
					<field name="state"/>
					<field name="active"/>
				</tree>
			</field>
		</record>
		
		 <record id="kite_GRN_action_form" model="ir.actions.act_window">
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kite.GRN</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="kite_GRN_tree_view"/>
		</record>

	
	
	
		
		<menuitem id="menu_purchase_action_form" sequence="1" parent="purchase" action="purchase_action_form"/>
		
		
		<record id="kite_GRN_line_form" model="ir.ui.view">
			<field name="name">kite.GRN.line.form</field>
			<field name="model">kite.GRN.line</field>
			<field name="arch" type="xml">
				<form string="Product Line" >
					<group>
							<group>
								<field name="item_name"/>
								
							</group>
							
					</group>	

				</form>
				
			</field>
		</record>

	<record id="kite_GRN_line_tree" model="ir.ui.view">
		<field name="name">kite.GRN.line.tree</field>
		<field name="model">kite.GRN.line</field>
		<field name="arch" type="xml">
			<tree string="Inventory planning Line" editable="bottom"> 
					   
					   <field name="product" />
					   <field name="unit_price"  />
					   <field name="Required_qty" />
					   <field name="total_price" />
					   <field name="PO_Qty" />
					   <field name="Received QTY" />
					   <field name="Accepted_Qty" />
			</tree>		
		</field>
	</record>
	
		
</data>
	</openerp>
